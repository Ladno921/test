<%- include('../particles/header.ejs') %>

<%- include('../particles/navigation.ejs') %>

<form action="/store" method="post">
    <div class="form-group">
        <label class="form-group__label">SELLER</label>
        <% for(let i = 0; i < seller.length; i++){ %>
            <label><%= seller[i].title %></label>
        <% } %>
    </div>

    <div class="form-group">
        <label class="form-group__label">STORE</label>
        <% for(let i = 0; i < store.length; i++){ %>
            <label for="store"> <%= store[i].title %></label>
            <input type="radio" name="check_1" value="<%= store[i].id %>" required>
        <% } %>
    </div>

    <div class="form-group">
        <label class="form-group__label">ITEMS</label>
        <% for(let i = 0; i < item.length; i++){ %>
            <label for="item"><%= item[i].title %></label>
            <input type="radio" name="check_2" value="<%= item[i].id %>" required>
        <% } %>
    </div>

    <input class="form-button" type="submit" value="Create">
</form>

<%- include('../particles/footer.ejs') %>
